<% if current_user.alliance_admin? || current_user.alliance_manager? %>
  <%= link_to edit_goal_alliance_duel_duel_day_path(duel_day.alliance_duel, duel_day), 
              class: "block w-full text-center p-1 rounded hover:bg-[var(--lw-accent-4)] transition cursor-pointer",
              data: { turbo_frame: dom_id(duel_day, :goal) } do %>
    <div class="font-semibold text-lg"><%= number_with_precision(duel_day.score_goal, precision: 1) %></div>
    <div class="text-xs text-[var(--lw-muted)]">Goal</div>
  <% end %>
<% else %>
  <div class="font-semibold text-lg"><%= number_with_precision(duel_day.score_goal, precision: 1) %></div>
  <div class="text-xs text-[var(--lw-muted)]">Goal</div>
<% end %> 

<% unless duel_day.locked? %>
  <a class="block w-full" href="<%= edit_goal_alliance_duel_duel_day_path(alliance_duel_start_date: duel_day.alliance_duel.start_date, id: duel_day.id) %>">
    <div class="font-semibold text-lg"><%= number_with_precision(duel_day.score_goal, precision: 1) %></div>
    <div class="text-xs text-[var(--lw-muted)]">Goal</div>
  </a>
<% else %>
  <div class="block w-full">
    <div class="font-semibold text-lg"><%= number_with_precision(duel_day.score_goal, precision: 1) %></div>
    <div class="text-xs text-[var(--lw-muted)]">Goal</div>
  </div>
<% end %> 

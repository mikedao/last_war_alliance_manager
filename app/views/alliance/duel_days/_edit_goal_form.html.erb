<%= form_with(model: duel_day, url: alliance_duel_duel_day_path(alliance_duel_start_date: duel_day.alliance_duel.start_date, id: duel_day.id), method: :patch, html: { id: "goal_form_#{duel_day.id}", data: { controller: "goal-editor" } }) do |form| %>
  <div class="flex items-center justify-center">
    <%= form.number_field :score_goal, step: 0.1, min: 0, 
        class: "w-16 px-2 py-1 border border-[var(--lw-accent-3)] rounded bg-[var(--lw-bg)] text-[var(--lw-text)] focus:outline-none focus:border-[var(--lw-accent-2)] text-center no-spinner",
        onblur: "this.form.requestSubmit()",
        data: { "goal-editor-target": "input", duel_day_id: duel_day.id } %>
  </div>
<% end %> 

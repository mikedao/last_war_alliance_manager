<%= turbo_frame_tag dom_id(duel_day, :lock_button) do %>
  <% if current_user.alliance_admin? || current_user.alliance_manager? %>
    <%= button_to toggle_lock_alliance_duel_duel_day_path(alliance_duel_start_date: duel_day.alliance_duel.start_date, id: duel_day.id), 
                  method: :patch, 
                  class: "w-16 mt-2 px-2 py-1 text-xs font-bold rounded-md border-2 transition #{duel_day.locked? ? 'bg-yellow-400 text-black border-yellow-600 hover:bg-yellow-300' : 'bg-black text-yellow-400 border-yellow-400 hover:bg-gray-900'}" do %>
      <%= duel_day.locked? ? 'Locked' : 'Lock' %>
    <% end %>
  <% end %>
<% end %> 

<div class="bg-[var(--lw-surface)] border-2 border-[var(--lw-accent-3)] rounded-2xl shadow-xl p-10">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-3xl text-[var(--lw-accent-2)]">Players in Your Alliance</h1>
    <div class="flex gap-4">
      <%= link_to 'Create New Player', new_alliance_player_path(@alliance), class: "rounded bg-[var(--lw-accent-2)] text-[var(--lw-bg)] font-bold px-4 py-2 hover:bg-[var(--lw-accent)] transition" %>
      <%= link_to 'Bulk Add Players', bulk_add_alliance_players_path(@alliance), class: "rounded bg-[var(--lw-accent-4)] text-[var(--lw-text)] font-bold px-4 py-2 hover:bg-[var(--lw-accent-3)] transition" %>
    </div>
  </div>

  <turbo-frame id="flash">
    <% if notice %>
      <%= render 'shared/flash', message: notice, type: 'notice' %>
    <% end %>
  </turbo-frame>

  <turbo-frame id="players_list">
    <%= render 'alliance/players/list' %>
  </turbo-frame>
</div>

<section class="flex justify-center items-center min-h-[60vh]">
  <div class="bg-[var(--lw-surface)] border-2 border-[var(--lw-accent-3)] rounded-2xl shadow-xl px-6 sm:px-10 py-8 sm:py-12 max-w-6xl w-full mx-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="font-bold text-3xl text-[var(--lw-accent-2)]">Bulk Add Players</h1>
      <%= link_to 'Back to Dashboard', dashboard_path, class: "text-[var(--lw-accent-2)] hover:text-[var(--lw-accent)] transition" %>
    </div>

    <div class="mb-6 text-[var(--lw-text)]">
      <p class="text-lg mb-4">Paste your player data below. Each line in each column will create one player.</p>
      <p class="mb-4"><strong>Note:</strong> Only complete sets (username + rank + level) will be processed. Missing data will be skipped.</p>
      <p class="mb-6"><strong>Existing players:</strong> If a username already exists, the player will be updated with the new data.</p>
    </div>

    <%= form_with url: bulk_create_players_path, method: :post, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <%= form.label :usernames, 'Usernames (one per line)', class: "block text-[var(--lw-text)] font-semibold mb-2" %>
          <%= form.text_area :usernames, 
              rows: 20, 
              placeholder: "Player1\nPlayer2\nPlayer3\nPlayer4\nPlayer5",
              class: "w-full px-3 py-2 border border-[var(--lw-accent-3)] rounded bg-[var(--lw-bg)] text-[var(--lw-text)] focus:outline-none focus:border-[var(--lw-accent-2)] resize-none" %>
        </div>

        <div>
          <%= form.label :ranks, 'Ranks (one per line)', class: "block text-[var(--lw-text)] font-semibold mb-2" %>
          <%= form.text_area :ranks, 
              rows: 20, 
              placeholder: "R3\nR2\nR4\nR1\nR5",
              class: "w-full px-3 py-2 border border-[var(--lw-accent-3)] rounded bg-[var(--lw-bg)] text-[var(--lw-text)] focus:outline-none focus:border-[var(--lw-accent-2)] resize-none" %>
        </div>

        <div>
          <%= form.label :levels, 'Levels (one per line)', class: "block text-[var(--lw-text)] font-semibold mb-2" %>
          <%= form.text_area :levels, 
              rows: 20, 
              placeholder: "75\n60\n85\n45\n90",
              class: "w-full px-3 py-2 border border-[var(--lw-accent-3)] rounded bg-[var(--lw-bg)] text-[var(--lw-text)] focus:outline-none focus:border-[var(--lw-accent-2)] resize-none" %>
        </div>
      </div>

      <div class="flex gap-4 pt-4">
        <%= form.submit 'Bulk Create Players', class: "flex-1 bg-[var(--lw-accent-2)] text-[var(--lw-bg)] font-bold py-3 px-6 rounded hover:bg-[var(--lw-accent)] transition" %>
        <%= link_to 'Cancel', players_path, class: "flex-1 bg-[var(--lw-accent-4)] text-[var(--lw-text)] font-bold py-3 px-6 rounded hover:bg-[var(--lw-accent-3)] transition text-center" %>
      </div>
    <% end %>
  </div>
</section> 

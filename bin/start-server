#!/usr/bin/env ruby

# Log the port being used
port = ENV.fetch("PORT", Rails.env.production? ? 8080 : 3000)
puts "Starting Rails server on port #{port}"
puts "Environment: #{Rails.env}"
puts "Binding to: 0.0.0.0:#{port}"

# Start the Rails server
exec("./bin/rails", "server", "-b", "0.0.0.0", "-p", port.to_s) 
